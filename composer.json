{
  "name": "bytic/money",
  "license": "MIT",
  "description": "Bytic money",
  "authors": [
    {
      "name": "Gabriel Solomon",
      "email": "hello@gabrielsolomon.ro"
    }
  ],
  "autoload": {
    "psr-4": {
      "ByTIC\\Money\\": "src"
    },
    "files": [
      "src/functions/general.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "ByTIC\\Money\\Tests\\": "tests/src",
      "ByTIC\\Money\\Tests\\Fixtures\\": "tests/fixtures"
    }
  },
  "require": {
    "php": "^8.0",
    "ext-json": "*",
    "ext-intl": "*",
    "bytic/container": "^1.0|^2.0",
    "bytic/config": "^1.0|^2.0",
    "bytic/utility": "^1.0",
    "moneyphp/money": "^3.3"
  },
  "require-dev": {
    "bytic/phpqatools": "^1.0.19",
    "mockery/mockery": "^1.0",
    "bytic/orm": "^0.9 || ^1.0 || ^2.0",
    "bytic/helpers": "^2.0"
  },
  "scripts": {
    "tests": [
      "@analyse",
      "@test"
    ],
    "test": [
      "phpunit"
    ],
    "analyse": [
      "@stan",
      "@psalm"
    ],
    "stan": "phpstan analyse",
    "psalm": "psalm --output-format=compact --find-dead-code --find-unused-psalm-suppress --long-progress "
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true,
      "ergebnis/composer-normalize": true,
      "bytic/phpqatools": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
